<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="andrew.com.riko.www.webviewproject">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_chrome_reader_mode_black_24dp"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_chrome_reader_mode_black_24dp"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".HtmlActivity"
            android:label="@string/title_activity_html">
            <intent-filter>
                <action android:name="android.intent.action.myWeb" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".BottomActivity"
            android:label="@string/title_activity_bottom"></activity>
        <activity android:name=".PictureActivity"
            android:label="@string/title_activity_pics"></activity>
        <activity
            android:name=".GetTokenActivity"
            android:label="@string/title_activity_getToken"></activity>
        <activity android:name=".MultiVideoChatActivity">
            <intent-filter>
                <action android:name="andrew.intent.action.HAHA" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login" />
        <activity
            android:name=".FirstActivity"
            android:label="@string/title_list_activity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- service tag 放在 application tag 中 -->
        <service android:name=".service.MyFirebaseInstanceIdService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>
        <service android:name=".MyFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>


    </application>

</manifest>